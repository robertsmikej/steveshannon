{
  "name": "contact",
  "description": "Need some work done? Contact me and let's get to work!",
  "widgets": [
    {
      "type": "heroBanner",
      "header_1": "Contact Me",
      "special": true,
      "styles": {
        "class_alignment": "Left",
        "class_justify-content": "Bottom",
        "color_header": "Light Text Color"
      },
      "desktop": "/img/orange_speaker_background.jpg"
    },
    {
      "type": "spacer",
      "styles": {
        "class_height": "Large",
        "class_line": false,
        "backgroundColor_line": "Dark Text Color"
      }
    },
    {
      "type": "contact",
      "items": [
        {
          "text": "Name",
          "required": true,
          "short_name": "name",
          "placeholder": "E.G. Ian Malcolm",
